{
  "realm": "wifimanager",
  "enabled": true,
  "displayName": "WiFi Manager",
  "roles": {
    "realm": [
      { "name": "WIFI_ADMIN" },
      { "name": "WIFI_STAFF" }
    ]
  },
  "clients": [
    {
      "clientId": "admin-web",
      "name": "Admin Web",
      "protocol": "openid-connect",
      "publicClient": false,
      "secret": "admin-web-secret",
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "attributes": {
        "post.logout.redirect.uris": "http://localhost:8080/*"
      },
      "protocolMappers": [
        {
          "name": "picture",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "user.attribute": "picture",
            "claim.name": "picture",
            "jsonType.label": "String",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true",
            "multivalued": "false"
          }
        },
        {
          "name": "realm roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "consentRequired": false,
          "config": {
            "claim.name": "realm_access.roles",
            "jsonType.label": "String",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true",
            "multivalued": "true"
          }
        }
      ],
      "redirectUris": [
        "http://localhost:8080/login/oauth2/code/admin"
      ],
      "webOrigins": [
        "http://localhost:8080"
      ]
    },
    {
      "clientId": "captive-portal",
      "name": "Captive Portal",
      "protocol": "openid-connect",
      "publicClient": false,
      "secret": "captive-portal-secret",
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "protocolMappers": [
        {
          "name": "picture",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "consentRequired": false,
          "config": {
            "user.attribute": "picture",
            "claim.name": "picture",
            "jsonType.label": "String",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true",
            "multivalued": "false"
          }
        },
        {
          "name": "realm roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "consentRequired": false,
          "config": {
            "claim.name": "realm_access.roles",
            "jsonType.label": "String",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true",
            "multivalued": "true"
          }
        }
      ],
      "webOrigins": []
    }
  ],
  "users": [
    {
      "username": "admin",
      "enabled": true,
      "email": "admin@wifimanager.local",
      "firstName": "Admin",
      "lastName": "User",
      "emailVerified": true,
      "attributes": {
        "picture": ["http://localhost:8080/assets/shared/admin.png"]
      },
      "credentials": [
        { "type": "password", "value": "admin", "temporary": false }
      ],
      "realmRoles": ["WIFI_ADMIN", "WIFI_STAFF"]
    },
    {
      "username": "user",
      "enabled": true,
      "email": "user@wifimanager.local",
      "firstName": "Regular",
      "lastName": "User",
      "emailVerified": true,
      "attributes": {
        "picture": ["http://localhost:8080/assets/shared/user.png"]
      },
      "credentials": [
        { "type": "password", "value": "user", "temporary": false }
      ],
      "realmRoles": ["WIFI_STAFF"]
    }
  ]
}
